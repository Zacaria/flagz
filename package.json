{
  "name": "flagz",
  "version": "0.6.2",
  "description": "flagz POC",
  "main": "./bin/www.js",
  "scripts": {
    "start": "HOME=\"$OPENSHIFT_REPO_DIR\"/.. && node_modules/.bin/pm2 dist/bin/www.js -i max",
    "serve": "nodemon src/bin/www.js --exec babel-node",
    "clean": "rm -rf dist/ && mkdir dist",
    "deploy-patch": "npm version patch",
    "deploy-minor": "npm version minor",
    "deploy-major": "npm version major",
    "preversion": "npm run clean && npm run dist && npm run doc && npm run git-dist",
    "dist": "babel src -d dist",
    "doc": "apidoc -i src/ -o doc/",
    "git-dist": "git add --all && git commit -m \"[UP] : deploy dist\"",
    "postversion": "git push",
    "deploy-silent": "npm run preversion && npm run postversion",
    "test": "node_modules/.bin/mocha test -R spec --recursive --compilers js:babel-core/register"
  },
  "author": "Zacaria",
  "license": "MIT",
  "apidoc": {
    "title": "FlagZ Documentation",
    "url": "http://flagz-chtatarz.rhcloud.com"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "config": "^1.24.0",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.3",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.1.9",
    "mongoose": "^4.7.1",
    "morgan": "^1.7.0",
    "pm2": "^2.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "browser-sync": "^2.18.2",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0"
  }
}
