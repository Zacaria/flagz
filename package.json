{
  "name": "flagz",
  "version": "0.5.0",
  "description": "flagz POC",
  "main": "start.js",
  "scripts": {
    "start": "node dist/start.js",
    "serve": "nodemon src/start.js --exec babel-node",
    "deploy-patch": "npm version patch && npm run deploy",
    "deploy-minor": "npm version minor && npm run deploy",
    "deploy-major": "npm version major && npm run deploy",
    "preversion": "npm run build && npm run doc && npm run git-dist",
    "build": "babel src -d dist",
    "doc": "apidoc -i src/ -o doc/",
    "git-dist": "git add --all && git commit -m \"[UP] : deploy dist\"",
    "postversion": "git push",
    "deploy-silent": "npm run preversion && npm run postversion",
    "test": "npm test"
  },
  "config": {
    "version": "patch"
  },
  "author": "Zacaria Halftasoeur",
  "license": "MIT",
  "apidoc": {
    "title": "FlagZ Documentation",
    "url": "http://flagz-chtatarz.rhcloud.com"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.3",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.1.9",
    "mongoose": "^4.7.1",
    "morgan": "^1.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "browser-sync": "^2.18.2",
    "nodemon": "^1.11.0"
  }
}
